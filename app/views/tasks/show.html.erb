<h1><%= @task.title %></h1>
<p class="details"><%= @task.details %></p>
<div class="buttons">
<%= link_to "Update this Task", edit_task_path(@task), class: "link" %>
<%= link_to "Delete this Task", task_path(@task),
    method: :delete,
    data: { confirm: "Are you sure?" },
    class: "link"  %>
<%= link_to "Back to Tasks", tasks_path, class: "link"  %>
</div>
